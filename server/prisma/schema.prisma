// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  fname    String
  lname    String
  email    String @unique
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Item {
  id       String  @id @default(cuid())
  code     String?
  name     String
  price    Int
  minValue Int?
  color    String
  size     String
  material String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  package   Package? @relation(fields: [packageId], references: [id])
  packageId String?
}

model Package {
  id   String  @id @default(cuid())
  code String?
  qty  Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  items Item[]
}

enum AttributeEnum {
  COLOR
  SIZE
  MATRIAL
}
